<% breadcrumb :tekmqbs_hospital, @hospital %>
<%= render 'form' %>
<%= link_to '健檢套餐管理', exam_dashboard_tekmqbs_hospital_path, class:'btn btn-info' %>
<%= link_to '健檢項目管理', item_dashboard_tekmqbs_hospital_path, class:'btn btn-info' %>
<div class="space-6"></div>
<div class="row">
  <div class="col-xs-12">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <td>套餐名稱</td>
          <td>套餐價錢</td>
          <td>適用性別</td>
          <td>檢查項目</td>
        </tr>
      </thead>
      <tbody>
        <% @exams.each do |exam| %>
          <tr>
            <td><%= link_to "#{exam.name}", package_dashboard_tekmqbs_exam_path(exam) %></td>
            <td><%= exam.price %></td>
            <td><%= exam.gender %></td>
            <td><%= exam.items.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
