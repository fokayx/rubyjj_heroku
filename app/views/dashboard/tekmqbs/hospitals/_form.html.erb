<div class="row">
  <div class="col-sm-12">
  <%= form_for [:dashboard, :tekmqbs, @hospital], html: {class:"form-horizontal"} do |f| %>
    <div class="form-group">
      <%= f.label :name, '醫院名稱', class:'col-sm-3 control-label no-padding-right' %>
      <div class="col-sm-9">
        <%= f.text_field :name, class:'col-xs-10 col-sm-5' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :phone, '醫院電話', class:'col-sm-3 control-label no-padding-right' %>
      <div class="col-sm-9">
        <%= f.text_field :phone, class:'col-xs-10 col-sm-5' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :address, '醫院地址', class:'col-sm-3 control-label no-padding-right' %>
      <div class="col-sm-9">
        <%= f.text_field :address, class:'col-xs-10 col-sm-5' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :area, '縣市區域', class:'col-sm-3 control-label no-padding-right' %>
      <div class="col-sm-9">
        <%= f.text_field :area, class:'col-xs-10 col-sm-5' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :web, '醫院網址', class:'col-sm-3 control-label no-padding-right' %>
      <div class="col-sm-9">
        <%= f.text_field :web, class:'col-xs-10 col-sm-5' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :location_id, '所屬區域', class:'col-sm-3 control-label no-padding-right' %>
      <div class="col-sm-9">
        <%= f.select(:location_id, (@location), class:'col-xs-10 col-sm-5') %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :status, '是否上線', class:'col-sm-3 control-label no-padding-right' %>
      <div class="col-sm-9 checkbox">
        <%= f.check_box :status, class:'col-xs-10 col-sm-5' %>
      </div>
    </div>
    <div class="clearfix form-actions">
      <div class="col-md-offset-3 col-md-9">
        <%= f.submit  class:'btn btn-info' %>
      </div>
    </div>
  <% end %>
  </div>
</div>
