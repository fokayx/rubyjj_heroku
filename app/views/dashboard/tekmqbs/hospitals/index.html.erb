<div class="page-header">
	<h1>
		Dashboard
		<small>
			<i class="fa fa-double-angle-right"></i>
			overview &amp; stats
		</small>
	</h1>
</div><!-- /.page-header -->

<div class="row">
  <div class="col-xs-12">
    <%= link_to '新增醫院', new_dashboard_tekmqbs_hospital_path, class:"btn btn-default" %>
  </div>
	<div class="col-xs-12">
		<div class="table-responsive">
	  	<table id="sample-table-1" class="table table-striped table-bordered table-hover">
	  		<thead>
	  			<tr>
	  				<th class="center">
	  					<label>
	  						<input type="checkbox" class="ace" />
	  						<span class="lbl"></span>
	  					</label>
	  				</th>
	  				<th>醫院名稱</th>
            <th class="hidden-480">
							<div class="visible-md visible-lg visible-sm visible-xs btn-group">
                所屬區域
              </div>
            </th>
	  				<th>套餐數量</th>
	  				<th >Status</th>
	  			</tr>
	  		</thead>
		    <tbody>
          <% @hospitals.each do |hospital| %>
					<tr>
						<td class="center">
							<label>
								<input type="checkbox" class="ace" />
								<span class="lbl"></span>
							</label>
						</td>

            <td>
							<%= link_to hospital.name, edit_dashboard_tekmqbs_hospital_path(hospital) %>
						</td>
            <td class="hidden-480">
							<div class="visible-md visible-lg visible-sm visible-xs btn-group">
                <%= hospital.location('#{:id}').name %>
              </div>
            </td>
            <td>
              <%= hospital.exams.count %>
            </td>

						<td>
              <% if hospital.status? %>
                <%= link_to "on", dashboard_tekmqbs_hospital_path(hospital, hospital:{status: "0"}), method: :patch, class:"btn btn-xs btn-success" %> 
              <% else %>
                <%= link_to "off", dashboard_tekmqbs_hospital_path(hospital, hospital:{status: "1"}), method: :patch, class:"btn btn-xs btn-warning" %>
              <% end %>
						</td>
					</tr>
        <% end %>
			  </tbody>
			</table>
    </div><!-- /row -->
	</div>
</div>
<%= paginate @hospitals %>
