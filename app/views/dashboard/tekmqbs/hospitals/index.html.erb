<div class="page-header">
	<h1>
		Dashboard
		<small>
			<i class="fa fa-double-angle-right"></i>
			overview &amp; stats
		</small>
	</h1>
</div><!-- /.page-header -->

<div class="row">
  <div class="col-xs-12">
    <%= link_to '新增醫院', new_dashboard_tekmqbs_hospital_path, class:"btn btn-default" %>
  </div>
	<div class="col-xs-12">
		<div class="table-responsive">
	  	<table id="sample-table-1" class="table table-striped table-bordered table-hover">
	  		<thead>
	  			<tr>
	  				<th class="center">
	  					<label>
	  						<input type="checkbox" class="ace" />
	  						<span class="lbl"></span>
	  					</label>
	  				</th>
	  				<th>醫院名稱</th>
	  				<th>所屬區域</th>
	  				<th class="hidden-480">套餐數量</th>
	  				<th class="hidden-480">Status</th>

	  				<th></th>
	  			</tr>
	  		</thead>
		    <tbody>
          <% @hospitals.each do |hospital| %>
					<tr>
						<td class="center">
							<label>
								<input type="checkbox" class="ace" />
								<span class="lbl"></span>
							</label>
						</td>

            <td>
							<%= link_to hospital.name, dashboard_tekmqbs_hospital_path(hospital) %>
						</td>
            <td>
              <%= hospital.location('#{:id}').name %>
            </td>
            <td>
              <%= hospital.exams.count %>
            </td>

						<td>
							<div class="visible-md visible-lg hidden-sm hidden-xs btn-group">
                <% if hospital.status? %>
                  <%= link_to "on", dashboard_tekmqbs_hospital_path(hospital, hospital:{status: "0"}), method: :patch, class:"btn btn-xs btn-success" %> 
                <% else %>
                  <%= link_to "off", dashboard_tekmqbs_hospital_path(hospital, hospital:{status: "1"}), method: :patch, class:"btn btn-xs btn-warning" %>
                <% end %>
              </div>
						</td>

						<td>
							<div class="visible-md visible-lg hidden-sm hidden-xs btn-group">
                <%= link_to  edit_dashboard_tekmqbs_hospital_path(hospital),  class:'btn btn-xs btn-info' do %>
									<i class="fa fa-edit bigger-120"></i>
                <% end %>
							</div>

							<div class="visible-xs visible-sm hidden-md hidden-lg">
								<div class="inline position-relative">
									<button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown">
										<i class="fa fa-cog fa fa-only bigger-110"></i>
									</button>

									<ul class="dropdown-menu dropdown-only-icon dropdown-yellow pull-right dropdown-caret dropdown-close">
										<li>
											<a href="#" class="tooltip-info" data-rel="tooltip" title="View">
												<span class="blue">
													<i class="fa fa-zoom-in bigger-120"></i>
												</span>
											</a>
										</li>

										<li>
											<a href="#" class="tooltip-success" data-rel="tooltip" title="Edit">
												<span class="green">
													<i class="fa fa-edit bigger-120"></i>
												</span>
											</a>
										</li>

										<li>
											<a href="#" class="tooltip-error" data-rel="tooltip" title="Delete">
												<span class="red">
													<i class="fa fa-trash bigger-120"></i>
												</span>
											</a>
										</li>
									</ul>
								</div>
							</div>
						</td>
					</tr>
        <% end %>
			  </tbody>
			</table>
    </div><!-- /row -->
	</div>
</div>
